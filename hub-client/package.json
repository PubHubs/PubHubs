{
	"name": "PubHubsClient",
	"version": "0.5.0",
	"private": true,
	"scripts": {
		"serve": "vue-cli-service serve --port=8081",
		"watch": "vue-cli-service serve --port=8081 --watch",
		"build": "vue-cli-service build",
		"lint": "vue-cli-service lint",
		"pwa": "vue-cli-service build && npx http-server dist",
		"test": "vitest",
		"test:run": "vitest run",
		"test:ui": "vitest --ui",
		"coverage": "vitest run --coverage"
	},
	"dependencies": {
		"@privacybydesign/yivi-client": "^0",
		"@privacybydesign/yivi-core": "^0",
		"@privacybydesign/yivi-frontend": "^0.1.2",
		"@privacybydesign/yivi-web": "^0",
		"@vue/test-utils": "^2.2.3",
		"autoprefixer": "^10",
		"core-js": "^3.8.3",
		"emojibase": "^16",
		"emojibase-data": "^16",
		"https-browserify": "^1.0.0",
		"loglevel": "^1.8.0",
		"matrix-js-sdk": "=36.1.0",
		"pinia": "^3",
		"postcss": "^8.4.33",
		"register-service-worker": "^1.7.2",
		"sanitize-html": "^2.11.0",
		"stream-http": "^3.2.0",
		"tailwind-merge": "^2",
		"tailwindcss": "^3",
		"util": "^0.12.5",
		"vue": "^3.2.13",
		"vue-i18n": "^11",
		"vue-router": "^4.1.5"
	},
	"devDependencies": {
		"@babel/core": "^7.12.16",
		"@babel/eslint-parser": "^7.12.16",
		"@pinia/testing": "^0.1.3",
		"@tailwindcss/forms": "^0.5.4",
		"@typescript-eslint/eslint-plugin": "^7",
		"@typescript-eslint/parser": "^7",
		"@vitejs/plugin-vue": "^5",
		"@vue/cli-plugin-babel": "~5.0.0",
		"@vue/cli-plugin-eslint": "~5.0.0",
		"@vue/cli-plugin-pwa": "~5.0.0",
		"@vue/cli-plugin-typescript": "~5.0.0",
		"@vue/cli-service": "^5.0.8",
		"@vue/eslint-config-typescript": "^13",
		"eslint": "^8.44.0",
		"eslint-plugin-vue": "^9",
		"jsdom": "^26",
		"msw": "2.3.2",
		"node-polyfill-webpack-plugin": "^4.0.0",
		"prettier": "^3.5.0",
		"prettier-eslint": "^16.3.0",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"typescript": "^5.0.2",
		"vitest": "^3",
		"vue-cli-plugin-tailwind": "~3.0.0",
		"vue-eslint-parser": "^9",
		"webpack": "^5.97.1"
	},
	"eslintConfig": {
		"root": true,
		"env": {
			"node": true,
			"vue/setup-compiler-macros": true
		},
		"extends": [
			"plugin:vue/vue3-essential",
			"eslint:recommended",
			"@vue/typescript"
		],
		"parserOptions": {
			"parser": "@typescript-eslint/parser"
		},
		"rules": {
			"no-unused-vars": "off",
			"@typescript-eslint/no-unused-vars": [
				"error",
				{
					"vars": "all",
					"args": "after-used",
					"varsIgnorePattern": "^props|value",
					"ignoreRestSiblings": false
				}
			],
			"vue/multi-word-component-names": "off"
		}
	},
	"prettier": {
		"printWidth": 240,
		"tabWidth": 4,
		"useTabs": true,
		"semi": true,
		"singleQuote": true,
		"quoteProps": "as-needed",
		"trailingComma": "all",
		"bracketSpacing": true,
		"bracketSameLine": false,
		"arrowParens": "always",
		"htmlWhitespaceSensitivity": "css",
		"vueIndentScriptAndStyle": true,
		"endOfLine": "lf",
		"embeddedLanguageFormatting": "auto",
		"singleAttributePerLine": false,
		"plugins": [
			"prettier-plugin-tailwindcss"
		]
	},
	"browser": {
		"http": false,
		"https": false,
		"net": false,
		"path": false,
		"stream": false,
		"tls": false,
		"fs": false
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not dead",
		"not ie 11"
	],
	"_id": "@",
	"readme": "ERROR: No README data found!"
}
