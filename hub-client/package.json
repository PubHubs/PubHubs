{
	"name": "@pubhubs/hub-client",
	"version": "0.5.0",
	"type": "module",
	"private": true,
	"scripts": {
		"serve": "vite --host",
		"watch": "vite",
		"build": "vite build",
		"lint": "eslint --ext .js,.vue,.ts --ignore-path .gitignore --fix src",
		"pwa": "vite build && npx http-server dist",
		"test": "vitest",
		"test:run": "vitest run",
		"test:ui": "vitest --ui",
		"coverage": "vitest run --coverage"
	},
	"engines": {
		"npm": ">=9.8.1",
		"node": ">=22.0.0"
	},
	"dependencies": {
		"@privacybydesign/yivi-client": "^0",
		"@privacybydesign/yivi-core": "^0",
		"@privacybydesign/yivi-frontend": "^0.2.1",
		"@privacybydesign/yivi-web": "^0",
		"@vue/test-utils": "^2.2.3",
		"@vuepic/vue-datepicker": "^11.0.2",
		"@vueuse/core": "^14.1.0",
		"chai": "^6.2.1",
		"emojibase": "^17",
		"emojibase-data": "^17",
		"https-browserify": "^1.0.0",
		"loglevel": "^1.8.0",
		"matrix-js-sdk": "^39.3.0-rc.0",
		"mavon-editor": "^3.0.2",
		"pinia": "^3",
