		"tailwind-merge": "^3",
		"util": "^0.12.5",
		"vite": "^7.2.6",
		"vue": "^3.2.13",
		"vue-i18n": "^11",
		"vue-router": "^4.1.5"
	},
	"devDependencies": {
		"@pinia/testing": "^1",
		"@tailwindcss/vite": "^4.1.11",
		"@trivago/prettier-plugin-sort-imports": "^6.0.0",
		"@types/sanitize-html": "^2.13.0",
		"@vitejs/plugin-vue": "^6",
		"@vue/eslint-config-typescript": "^13",
		"autoprefixer": "^10.4.21",
		"eslint": "^8.44.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-vue": "^9",
		"jsdoc": "^4.0.2",
		"jsdom": "^27",
		"msw": "^2.12.4",
		"postcss": "^8.5.3",
		"prettier": "^3.5.0",
		"prettier-eslint": "^16.3.0",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"tailwindcss": "^4.1.11",
		"typescript": "^5.0.2",
		"vite-plugin-node-polyfills": "^0.24.0",
		"vitest": "^4",
		"vue-eslint-parser": "^9",
		"vue-mess-detector": "^0.67.0",
		"webpack": "^5.97.1"
	},
	"eslintConfig": {
		"root": true,
		"env": {
			"node": true,
			"es2022": true,
			"vue/setup-compiler-macros": true
		},
		"extends": [
			"plugin:vue/vue3-essential",
			"eslint:recommended",
			"@vue/typescript"
		],
		"parserOptions": {
			"parser": "@typescript-eslint/parser"
		},
		"rules": {
			"no-unused-vars": "off",
			"no-debugger": "warn",
			"@typescript-eslint/no-unused-vars": [
				"error",
				{
					"vars": "all",
					"args": "after-used",
					"varsIgnorePattern": "^props|value",
					"ignoreRestSiblings": false
				}
			],
			"vue/multi-word-component-names": "off"
		}
	},
	"browser": {
		"http": false,
		"https": false,
		"net": false,
		"path": false,
		"stream": false,
		"tls": false,
		"fs": false
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not dead",
		"not ie 11"
	],
	"_id": "@",
	"readme": "ERROR: No README data found!"
}
